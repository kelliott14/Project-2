{{!-- Using static data only - this will need to be changed to JS once db is up --}}
  <div class="container">
  <h1>Choose a Game</h1>
    <div class="row">
      <div class="card-columns">
        {{#each games}}
        <div class="card text-white mb-3 chooseGameCard" data-id="{{this.id}}">
          <div class="card-body">
            <h4 class="card-title chooseGameCardTitles">{{this.title}}</h4>
            <h5 class="card-title chooseGameCardTime">{{this.ends_at}}</h5>
          </div>
      </div>
      {{/each}}

      </div>
    </div>
  </div>

  <div class="modal" tabindex="-1" role="dialog" id="chooseGameSelectedGame">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">You've selected:</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="text-center" id="chooseGameModalTitle"></p>
        <p class="text-center" id="chooseGameModalTime">You have 24hrs to complete</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" id="chooseGameStartGame">Start Game</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>


</div>


